/* pages/article/index.wxss */
.page {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.scroll-view {
  width: 100%;
}
.list-item {
  height: 100rpx;
  padding: 20rpx;
  border-bottom: 1rpx solid #DDD;
}
.list-item image {
  width: 180rpx;
  height: 100rpx;
  float: left;
  margin-right: 20rpx;
}
.list-item .text {
  overflow: hidden;
}
.list-item .text .title {
  font-size: 30rpx;
  font-family: "黑体";
  float: left;
  display: block;
  width: 100%;
  /* 单行，超出显示省略号 start*/
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; 
  /* 单行，超出显示省略号 end*/
}
.list-item .text .description {
  width: 100%;
  font-size: 24rpx;
  margin-top: 18rpx;
  float: left;
  color: gray;

  /* 多行，超过显示省略号 */
